<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:elevation="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- greetings -->

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Day,"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/highlight"
            android:textSize="16sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileButton"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/highlight"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintStart_toEndOf="@id/profileButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- buttons -->

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/profile_buttonDesc"
            android:elevation="4dp"
            android:onClick="goToProfile"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_proflle"
            tools:ignore="RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

<!--        <TextView-->
<!--            android:id="@+id/dashboard_label"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:contentDescription="@string/dashboard_pageDesc"-->
<!--            android:elevation="4dp"-->
<!--            android:fontFamily="@font/inter_bold"-->
<!--            android:text="@string/dashboard_label"-->
<!--            android:textColor="@color/highlight"-->
<!--            android:textSize="20sp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/settings_buttonDesc"
            android:elevation="4dp"
            android:onClick="goToSettings"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_setting"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toTopOf="@id/botNav">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/dashboard_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topNav">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- weekly layout -->

                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Month Year"
                    android:textColor="@color/highlight"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/sunDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/week_day"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/monDay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/sunText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/sunDay"
                    app:layout_constraintEnd_toEndOf="@+id/sunDay"
                    app:layout_constraintStart_toStartOf="@+id/sunDay"
                    app:layout_constraintTop_toTopOf="@+id/sunDay" />

                <View
                    android:id="@+id/monDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintStart_toEndOf="@id/sunDay"
                    app:layout_constraintEnd_toStartOf="@+id/tuesDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/monText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="M"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/monDay"
                    app:layout_constraintEnd_toEndOf="@+id/monDay"
                    app:layout_constraintStart_toStartOf="@+id/monDay"
                    app:layout_constraintTop_toTopOf="@+id/monDay" />

                <View
                    android:id="@+id/tuesDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintStart_toEndOf="@id/monDay"
                    app:layout_constraintEnd_toStartOf="@+id/wednesDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tuesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="T"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tuesDay"
                    app:layout_constraintEnd_toEndOf="@+id/tuesDay"
                    app:layout_constraintStart_toStartOf="@+id/tuesDay"
                    app:layout_constraintTop_toTopOf="@+id/tuesDay" />

                <View
                    android:id="@+id/wednesDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintEnd_toStartOf="@id/thursDay"
                    app:layout_constraintStart_toEndOf="@id/tuesDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/wednesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="W"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/wednesDay"
                    app:layout_constraintEnd_toEndOf="@+id/wednesDay"
                    app:layout_constraintStart_toStartOf="@+id/wednesDay"
                    app:layout_constraintTop_toTopOf="@+id/wednesDay" />

                <View
                    android:id="@+id/thursDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintEnd_toStartOf="@id/friDay"
                    app:layout_constraintStart_toEndOf="@+id/wednesDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/thursText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="T"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/thursDay"
                    app:layout_constraintEnd_toEndOf="@+id/thursDay"
                    app:layout_constraintStart_toStartOf="@+id/thursDay"
                    app:layout_constraintTop_toTopOf="@+id/thursDay" />

                <View
                    android:id="@+id/friDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintEnd_toStartOf="@id/satDay"
                    app:layout_constraintStart_toEndOf="@+id/thursDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/friText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="F"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/friDay"
                    app:layout_constraintEnd_toEndOf="@+id/friDay"
                    app:layout_constraintStart_toStartOf="@+id/friDay"
                    app:layout_constraintTop_toTopOf="@+id/friDay" />

                <View
                    android:id="@+id/satDay"
                    android:layout_width="45dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/week_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/friDay"
                    app:layout_constraintTop_toBottomOf="@id/currentDate"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/satText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/inter_light"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/satDay"
                    app:layout_constraintEnd_toEndOf="@+id/satDay"
                    app:layout_constraintStart_toStartOf="@+id/satDay"
                    app:layout_constraintTop_toTopOf="@+id/satDay" />

                <!-- environmental data -->

                <TextView
                    android:id="@+id/environmentalData_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Environmental Data"
                    android:textColor="@color/highlight"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sunDay" />

                <TextView
                    android:id="@+id/timestampTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_light"
                    android:text="As of: "
                    android:textColor="@color/highlight"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/environmentalData_text" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <!-- temp graph -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tempLayout"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/chart_border"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/timestampTextView">

                    <TextView
                        android:id="@+id/tempLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Temperature"
                        android:textColor="@color/highlight"
                        android:textSize="18sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/tempMore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/sed__1_"
                        android:contentDescription="See more button for temperature"
                        android:elevation="10dp"
                        android:fontFamily="@font/inter_light"
                        android:onClick="goToTempCharts"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/temperatureProgress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        app:donut_finished_color="@color/highlight"
                        app:donut_max="60"
                        app:donut_suffix_text="°C"
                        app:donut_text_color="@color/highlight"
                        app:donut_text_size="20dp"
                        app:donut_unfinished_color="@color/detail"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- humid graph -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/humidLayout"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/chart_border"
                    android:elevation="8dp"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/timestampTextView">

                    <TextView
                        android:id="@+id/humidLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Humidity"
                        android:textColor="@color/highlight"
                        android:textSize="18sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="18sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"                    app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/humidMore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/sed__1_"
                        android:contentDescription="See more button for humidity"
                        android:elevation="10dp"
                        android:fontFamily="@font/inter_light"
                        android:onClick="goToHumidCharts"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/humidityProgress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        app:donut_finished_color="@color/highlight"
                        app:donut_suffix_text="%"
                        app:donut_text_color="@color/highlight"
                        app:donut_text_size="20dp"
                        app:donut_unfinished_color="@color/detail"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- lux report -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/lightCardView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tempLayout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/luminosityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:alpha="0.85"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/lightBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/day_background"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/lightLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:text="Luminosity"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/lightMore"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/sed"
                            android:contentDescription="See more button for light"
                            android:elevation="10dp"
                            android:fontFamily="@font/inter_light"
                            android:onClick="goToLightCharts"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/light_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_light_on_2"
                            app:flow_verticalAlign="center"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/luxValue"
                            app:layout_constraintEnd_toStartOf="@id/luxValue"
                            app:layout_constraintTop_toTopOf="@+id/luxValue" />

                        <TextView
                            android:id="@+id/luxValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="45sp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="-5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lightLabel" />

                        <TextView
                            android:id="@+id/lightLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_regular"
                            android:text="Low"
                            android:textSize="12sp"
                            app:flow_horizontalAlign="start"
                            app:layout_constraintStart_toStartOf="@+id/luxValue"
                            app:layout_constraintTop_toBottomOf="@+id/luxValue" />

                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="lux"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:flow_verticalAlign="top"
                            app:layout_constraintStart_toEndOf="@+id/luxValue"
                            app:layout_constraintTop_toTopOf="@+id/luxValue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- for water and power bar graph -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/miniWaterBar"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/chart_border"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lightCardView">

                    <ImageView
                        android:id="@+id/ic_waterFlow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_water"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/waterConsumed_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="25sp"
                        android:textColor="@color/highlight"
                        android:fontFamily="@font/inter_bold"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/ic_waterFlow"
                        app:layout_constraintStart_toStartOf="@id/ic_waterFlow"/>

                    <TextView
                        android:id="@+id/waterConsumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Water Consumed"
                        android:textSize="12sp"
                        app:flow_horizontalAlign="start"
                        app:layout_constraintStart_toStartOf="@+id/waterConsumed_TextView"
                        app:layout_constraintTop_toBottomOf="@+id/waterConsumed_TextView" />

                    <TextView
                        android:id="@+id/water_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="L"
                        android:textColor="@color/highlight"
                        android:textSize="10sp"
                        app:flow_verticalAlign="top"
                        app:layout_constraintStart_toEndOf="@+id/waterConsumed_TextView"
                        app:layout_constraintTop_toTopOf="@+id/waterConsumed_TextView" />

                    <Button
                        android:id="@+id/waterMore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sed__1_"
                        android:contentDescription="See more button for water consumption"
                        android:elevation="10dp"
                        android:fontFamily="@font/inter_light"
                        android:onClick="goToWaterCharts"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/miniPowerBar"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/chart_border"
                    android:elevation="8dp"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lightCardView">

                    <ImageView
                        android:id="@+id/ic_mode"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ic_mode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/mode_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeMinTextSize="15sp"
                        android:autoSizeStepGranularity="2sp"                    android:textColor="@color/highlight"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/ic_mode"
                        app:layout_constraintStart_toStartOf="@id/ic_mode"/>

                    <TextView
                        android:id="@+id/modeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Mode"
                        android:textSize="12sp"
                        app:flow_horizontalAlign="start"
                        app:layout_constraintStart_toStartOf="@+id/mode_TextView"
                        app:layout_constraintTop_toBottomOf="@+id/mode_TextView" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/modePreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:layout_marginEnd="5dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/mode_TextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/mode_TextView" />

                    <Button
                        android:id="@+id/modeMore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/sed__1_"
                        android:contentDescription="See more button for mode settings"
                        android:elevation="10dp"
                        android:fontFamily="@font/inter_light"
                        android:onClick="openSysConfig"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- media preview -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/chart_border"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/miniWaterBar">

                    <TextView
                        android:id="@+id/mediaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Media"
                        android:textColor="@color/highlight"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/seeMore_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/inter_light"
                        android:textSize="12sp"
                        android:onClick="goToProfile"
                        android:text="see more"
                        android:textColor="@color/highlight"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mediaText"
                        tools:ignore="ScrollViewSize" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/botNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageButton
            android:id="@+id/sysConfig_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/system_configs_tab_desc"
            android:onClick="openSysConfig"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_config" />

        <TextView
            android:id="@+id/SystemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="System"
            android:textColor="@color/highlight"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sysConfig_tab"
            app:layout_constraintStart_toStartOf="@+id/sysConfig_tab"
            app:layout_constraintTop_toBottomOf="@id/sysConfig_tab" />

        <ImageButton
            android:id="@+id/scan_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="22dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/scan_tab_desc"
            android:elevation="4dp"
            android:onClick="openCamera"
            android:paddingStart="5dp"
            android:paddingTop="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            app:layout_constraintEnd_toStartOf="@id/guidelineBot"
            app:layout_constraintStart_toEndOf="@id/sysConfig_tab"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_scan" />

        <TextView
            android:id="@+id/CameraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="Camera"
            android:textColor="@color/highlight"
            android:textSize="12sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/scan_tab"
            app:layout_constraintStart_toStartOf="@id/scan_tab"
            app:layout_constraintTop_toBottomOf="@id/scan_tab" />

        <ImageButton
            android:id="@+id/camera_scan_tab"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="45dp"
            android:background="#00FFFFFF"
            android:contentDescription="Camera scan button"
            android:elevation="4dp"
            android:onClick="goToCameraDetect"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@id/guidelineBot"
            app:layout_constraintEnd_toStartOf="@id/image_scan_tab"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_camera_scan" />

        <TextView
            android:id="@+id/CameraScanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="Camera Scan"
            android:textColor="@color/highlight"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            app:layout_constraintEnd_toEndOf="@id/camera_scan_tab"
            app:layout_constraintStart_toStartOf="@id/camera_scan_tab"
            app:layout_constraintTop_toBottomOf="@id/camera_scan_tab"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/image_scan_tab"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="Image scan button"
            android:layout_marginEnd="20dp"
            android:elevation="4dp"
            android:onClick="goToImageSelect"
            android:paddingTop="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="7dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_image_scan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/ImageScanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:text="Image Scan"
            android:textColor="@color/highlight"
            android:textSize="12sp"
            app:flow_horizontalAlign="center"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_scan_tab"
            app:layout_constraintEnd_toEndOf="@id/image_scan_tab"
            app:layout_constraintTop_toBottomOf="@+id/image_scan_tab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>